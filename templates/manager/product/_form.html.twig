{% set submit_label = submit_label %}
{% set titreForm = titreForm %}
<section class="form-container py-5">
    <div class="form-card mx-auto p-4">
        <h1 class="form-title text-center mb-4">{{ titreForm }}</h1>

        {{ form_start(form) }}

        <div class="mb-3">
            {{ form_label(form.name, 'Nom du produit', {'attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.name, {'attr': {'class': 'form-control', 'placeholder': 'Entrez votre nom'}}) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.description, 'Description', {'attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.description, {'attr': {'class': 'form-control', 'placeholder': 'Entrez une description'}}) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.price, 'Prix de l\'article', {'attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.price, {'attr': {'class': 'form-control', 'placeholder': 'Entrez le prix'}}) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.images, 'Images', {'attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.images, {'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.expirationDate, 'Date d\'expiration', {'attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.expirationDate, {'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.reference, 'Référence', {'attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.reference, {'attr': {'class': 'form-control', 'placeholder': 'Référence unique'}}) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.category, 'Catégorie', {'attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.category, {'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.brand, 'Marque', {'attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.brand, {'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.stock.quantity, 'Quantité initiale', {'attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.stock.quantity, {'attr': {'class': 'form-control', 'placeholder': 'Entrez la quantité initiale'}}) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.stock.alert, 'Seuil d\'alerte', {'attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.stock.alert, {'attr': {'class': 'form-control', 'placeholder': 'Entrez le seuil d\'alerte'}}) }}
        </div>

        <div class="text-center">
            <button type="submit" class="btn btn-custom">{{ submit_label }}</button>
        </div>

        {{ form_end(form) }}
    </div>
</section>
{% extends 'base.html.twig' %}

{% set pageTitle = 'Suppression de ' ~ product.name %}

{% block title %}{{ pageTitle }}{% endblock %}
{% block body %}
    <section class="form-container py-5">
        <div class="form-card mx-auto p-4">
            <h1 class="form-title text-center mb-4">{{ pageTitle }}</h1>

            {{ form_start(form, {attr: {class: 'd-flex flex-column'}}) }}

            <div class="mb-3">
                {{ form_label(form.delete, 'Supprimer', {'attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.delete, {'attr': {'class': 'btn btn-danger w-100'}}) }}
            </div>

            <div class="mb-3">
                {{ form_label(form.cancel, 'Annuler', {'attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.cancel, {'attr': {'class': 'btn-custom w-100'}}) }}
            </div>

            {{ form_end(form) }}
        </div>
    </section>
{% endblock %}

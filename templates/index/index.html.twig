{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}
    <div class="product-container my-5">
        <h1 class="text-center mb-4">Nos produits conseils du mois</h1>
        <div class="row">
            {% for product in recommendedProducts %}
            <div class="col-md-4">
                <div class="product-card">
                    <img src="
                        {% if product.imageName %}
                            {{ vich_uploader_asset(product, 'imageFile', 'product_images') }}
                        {% else %}
                            {{ asset('images/products/default_image.webp') }}
                        {% endif %}" alt="{{ product.name }}">
                    <a href="{{ path('product_show', {'id': product.id}) }}"><h5>{{ product.name }}</h5></a>
                    <p>{{ product.description|slice(0, 80) ~ (product.description|length > 80 ? '...' : '') }}</p>
                    <p class="price">{{ product.price|number_format(2, ',', ' ') }} â‚¬</p>
                    <button class="btn-custom"><i class="fas fa-shopping-cart"></i> Ajouter au panier</button>
                </div>
            </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
